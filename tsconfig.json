{
    "compilerOptions": {
      "outDir": "./dist",
      "target": "es5",
      "module": "es6",
      "jsx": "react",
      "sourceMap": true,
      "strict": true,
      "types": ["node"],
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./src/@types", "./node_modules/@types"]
    }
}